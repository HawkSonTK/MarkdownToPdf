<Window x:Class="MarkdownToPdf.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Markdown Preview" Height="648" Width="1024"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- ファイル情報 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,5">
            <TextBlock Text="ファイル: " FontWeight="Bold"/>
            <TextBlock Name="FileNameTextBlock" Text="" TextTrimming="CharacterEllipsis"/>
        </StackPanel>
        
        <!-- WebView2 プレビュー -->
        <wv2:WebView2 Grid.Row="1" Name="PreviewWebView" Margin="5"/>
        
        <!-- 制御ボタン -->
        <Grid Grid.Row="2" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="1" Name="PrevButton" Content="← 前" Width="60" Height="25" 
                    Margin="0,0,5,0" Click="PrevButton_Click" IsEnabled="False"/>
            <Button Grid.Column="2" Name="NextButton" Content="次 →" Width="60" Height="25" 
                    Margin="0,0,5,0" Click="NextButton_Click" IsEnabled="False"/>
            <Button Grid.Column="3" Name="ConvertToPdfButton" Content="PDF変換" Width="80" Height="25" 
                    Margin="0,0,5,0" Click="ConvertToPdfButton_Click" IsEnabled="False"/>
            <Button Grid.Column="4" Name="RefreshButton" Content="更新" Width="60" Height="25" 
                    Margin="0,0,5,0" Click="RefreshButton_Click"/>
            <Button Grid.Column="5" Name="CloseButton" Content="閉じる" Width="60" Height="25" 
                    Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</Window>